<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#89cff0"
    tools:context="com.example.reece.stockmanagementapp.ScanActivity">


    <TextView
        android:id="@+id/scanTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/titleTextScan"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/scanMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/option_message"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_below="@+id/scanTitle"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/useScanBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/scanMessage"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="@string/scanUse"
        android:textColor="#fff"
        android:background="#3F51B5" />

    <Button
        android:id="@+id/addProductBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/scanAdd"
        android:textColor="#fff"
        android:background="#3F51B5"
        android:layout_alignTop="@+id/blankSpace"
        android:layout_toStartOf="@+id/blankSpace"
        android:layout_marginRight="5dp"/>

    <Button
        android:id="@+id/removeProductBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/scanRemove"
        android:textColor="#fff"
        android:background="#3F51B5"
        android:layout_alignTop="@+id/blankSpace"
        android:layout_alignStart="@+id/blankSpace"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/viewScanBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/scanView"
        android:textColor="#fff"
        android:background="#3F51B5"
        android:layout_above="@+id/returnHomeBtn"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/returnHomeBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/home"
        android:textColor="#fff"
        android:background="#303030"/>


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/scan_content"
        android:gravity="center"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/contentTitle"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/scan_format"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/formatTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scanContent"
        android:id="@+id/contentTitle"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/useScanBtn"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scanFormat"
        android:gravity="center"
        android:id="@+id/formatTitle"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_below="@+id/scan_content"
        android:layout_centerHorizontal="true" />

    <Space android:id="@+id/blankSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/viewScanBtn"
        android:layout_marginBottom="60dp"
        android:visibility="invisible"/>

</RelativeLayout>
